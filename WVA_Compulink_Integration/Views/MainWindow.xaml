<Window x:Class="WVA_Compulink_Integration.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WVA_Compulink_Integration"
        xmlns:viewmodels="clr-namespace:WVA_Compulink_Integration.ViewModels"
        xmlns:views="clr-namespace:WVA_Compulink_Integration.Views"
        mc:Ignorable="d"
        Height="550"
        Width="1000"
        MinWidth="1000" 
        MinHeight="550" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize" 
        Icon="/WVA_Compulink_Integration;component/Resources/logo-plain-vector-72-48x48.jpg">

    <Window.Resources>

        <Style TargetType="Button" x:Key="TabButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Sitka Text"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="33,5,0,0"/>
            <Setter Property="Template" x:Name="ButtonTemplate">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Grid x:Name="grid">
                            <Border x:Name="border" 
                                    CornerRadius="3,3,3,3" 
                                    BorderBrush="Black" 
                                    BorderThickness="1.6,1.9,2.9,2.9">
                                <Border.Background>
                                    <RadialGradientBrush GradientOrigin="0.496,1.052">
                                        <RadialGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterX="0.6" 
                                                                CenterY="0.6" 
                                                                ScaleX="1.5" 
                                                                ScaleY="1.5"/>
                                                <TranslateTransform X="0.02" Y="0.75"/>
                                            </TransformGroup>
                                        </RadialGradientBrush.RelativeTransform>
                                        <GradientStop Offset="1" Color="{StaticResource Fiery_Orange_Color}"/>
                                        <GradientStop Offset="0.3" Color="{StaticResource Fiery_Orange_Color}"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  TextElement.FontWeight="Regular">
                                </ContentPresenter>
                            </Border>
                        </Grid>

                        <!-- TRIGGERS -->
                        <ControlTemplate.Triggers>

                            <!-- Mouse Over Trigger -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" TargetName="border">
                                    <Setter.Value>
                                        <RadialGradientBrush GradientOrigin="0.496,1.052">
                                            <RadialGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterX="0.6" 
                                                                CenterY="0.6" 
                                                                ScaleX="1.5" 
                                                                ScaleY="1.5"/>
                                                    <TranslateTransform X="0.02" Y="0.75"/>
                                                </TransformGroup>
                                            </RadialGradientBrush.RelativeTransform>
                                            <GradientStop Color="{StaticResource Fiery_Orange_Color}" Offset="1"/>
                                            <GradientStop Color="White" Offset="0.3"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Mouse Click Trigger -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" TargetName="border">
                                    <Setter.Value>
                                        <RadialGradientBrush GradientOrigin="0.496,1.052">
                                            <RadialGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterX="0.5" 
                                                                    CenterY="0.5" 
                                                                    ScaleX="2" 
                                                                    ScaleY="2"/>
                                                    <TranslateTransform X="0.02" Y="0.9"/>
                                                </TransformGroup>
                                            </RadialGradientBrush.RelativeTransform>
                                            <GradientStop Color="White" Offset="1"/>
                                            <GradientStop Color="#F14419" Offset="0.3"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

         <!-- View Models -->
        <DataTemplate x:Name="searchViewTemplate" DataType="{x:Type viewmodels:SearchViewModel}">
            <views:SearchView DataContext="{Binding ElementName=searchViewTemplate}"/>
        </DataTemplate>

        <DataTemplate x:Name="ordersViewTemplate" DataType="{x:Type viewmodels:OrdersViewModel}">
            <views:OrdersView DataContext="{Binding ElementName=ordersViewTemplate}"/>
        </DataTemplate>

        <DataTemplate x:Name="settingsViewTemplate" DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView DataContext="{Binding ElementName=settingsViewTemplate}"/>
        </DataTemplate>

        <DataTemplate x:Name="settingsLoginViewTemplate" DataType="{x:Type viewmodels:SettingsLoginViewModel}">
            <views:SettingsLogin DataContext="{Binding ElementName=settingsLoginViewTemplate}"/>
        </DataTemplate>

        <DataTemplate x:Name="helpViewTemplate" DataType="{x:Type viewmodels:HelpViewModel}">
            <views:HelpView DataContext="{Binding ElementName=helpViewTemplate}"/>
        </DataTemplate>

        <DataTemplate x:Name="addToOrderViewTemplate" DataType="{x:Type viewmodels:AddToOrderViewModel}">
            <views:AddToOrderView DataContext="{Binding ElementName=addToOrderViewTemplate}"/>
        </DataTemplate>

    </Window.Resources>

    <Grid Margin="0,0,0,0">

        <!-- Nav Bar -->
        <Grid Margin="0,0,0,0"
              Width="215" 
              HorizontalAlignment="Left" >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF327EC3" Offset="0.393"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="76"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Main Logo -->
            <Image x:Name="TabLogo" 
                   HorizontalAlignment="Center"
                   Width="150"
                   Source="/Resources/logo-plain-vector-72-white.png" 
                   Margin="0,0,0,0" />

            <!-- Divider line below logo -->
            <Rectangle Fill="Black" 
                       Grid.Row="1" 
                       Height="3"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch">
            </Rectangle>


            <!-- Search Tab -->
            <StackPanel Grid.Row="2" >
                <Button x:Name="TabSearch" 
                        Content="Search" 
                        HorizontalAlignment="Left" 
                        Style="{StaticResource TabButton}" 
                        Click="TabSearch_Click" />
            </StackPanel>

            <!-- Orders Tab -->
            <StackPanel Grid.Row="3" >
                <Button x:Name="TabOrders"
                        Content="Orders" 
                        Style="{StaticResource TabButton}" 
                        Click="TabOrders_Click" />
            </StackPanel>

            <!-- Settings Tab -->
            <StackPanel Grid.Row="4" >
                <Button x:Name="TabSettings"
                        Content="Settings" 
                        Style="{StaticResource TabButton}"
                        Click="TabSettings_Click" />
            </StackPanel>

            <!-- Help Tab -->
            <StackPanel Grid.Row="5" >
                <Button x:Name="TabHelp"
                        Content="Help"  
                        Style="{StaticResource TabButton}" 
                        Click="TabHelp_Click" />
            </StackPanel>
        
        </Grid>

        <!-- Main Content Area-->
        <Grid  Margin="215,0,0,0">
            
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

            </Grid.RowDefinitions>

            <Border BorderBrush="Black" 
                    BorderThickness="3,0,0,0">
                <ContentControl Name="MainContentControl" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" 
                                Content="{Binding}"
                                Background="Black"
                                x:FieldModifier="public"/>
            </Border>
        </Grid>

    </Grid>

</Window>
